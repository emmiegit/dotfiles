; Polybar configuration for all devices
; Designate which bar(s) you want to use on startup
;
; Note that this configuration uses several PUA glyphs
; from the font siji.
;
; See https://github.com/polybar/polybar/wiki for information

;;
; COLORS
;;

[colors]
; TODO
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

battery-underline-full = #01cc92
battery-underline-charging = ${self.primary}
battery-underline-discharging = ${self.foreground-alt}

;;
; STYLING
;;

[style]
radius = 0

line-size = 3
line-color = #f00

border-size = 4
border-color = #000

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

workspace-padding = 1

;;
; BAR CONFIGURATIONS
;;

[bar/laptop]
monitor = ${env:MONITOR:eDP1}
enable-ipc = true

; Modules
modules-left = i3 mpd
modules-center = window
modules-right = wifi cpu memory battery pulseaudio datetime

; Styling
radius = ${style.radius}
line-size = ${style.line-size}
line-color = ${style.line-color}
border-size = ${style.border-size}
border-color = ${style.border-color}
padding-left = ${style.padding-left}
padding-right = ${style.padding-right}
module-margin-left = ${style.module-margin-left}
module-margin-right = ${style.module-margin-right}

; Fonts
; font-N = "<fontconfig pattenr>;<vertical offset>"
font-0 = "Source Code Pro:size=10;0"
font-1 = "Droid Sans:size=11;0"
font-2 = "Noto Sans Symbols2:size=9;2"
font-3 = "siji:pixelsize=10;0"

[bar/desktop]
; TODO
; Will need separate bars for different displays?

; Modules
modules-left = i3
modules-center = window
modules-right = ethernet cpu memory pulseaudio datetime

;;
; MODULES
;;

[module/i3]
type = internal/i3

; Only show workspaces on the same display as this bar
pin-workspaces = true

; Whether to sort by display (false) or by workspace index (true)
index-sort = false

; Allow clicking on workspaces
enable-click = true

; Allow scrolling on workspaces
enable-scroll = false

; Format
format = ÓÄÖ <label-state> <label-mode>

; Colors
label-mode-padding = ${style.workspace-padding}
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.primary}

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.primary}
label-focused-padding = ${style.workspace-padding}

label-unfocused = %index%
label-unfocused-padding = ${style.workspace-padding}

label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-background}
label-visible-padding = ${style.workspace-padding}

label-urgent = %index%
label-urgent-underline = ${colors.secondary}
label-urgent-padding = ${style.workspace-padding}

[module/window]
type = internal/xwindow
label = %title:0:40:...%
label-font = 1

[module/datetime]
type = internal/date

; Seconds to sleep between updates
interval = 1.0

; See "https://en.cppreference.com/w/cpp/io/manip/put_time" for options in formatting dates
; A time format is optional
date = %Y/%m/%d
time = %I:%M:%S %p

; Clicking on the module toggles to an alternate date/time format
date-alt = %A %B %d, %Y
time-alt = %I:%M:%S %p

; Other formatting options
format = ÓÄï <label>

label = %date% %time%
label-font = 0

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "ÓÄ¶ "
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "ÓÄ® "
label = %percentage_used%%

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 95

# How often to poll the battery if inotify events aren't coming through
poll-interval = 5

# Format and styling for the battery
format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.battery-underline-charging}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${colors.battery-underline-discharging}

format-full-prefix = "Óà∫ "
format-full-underline = ${colors.battery-underline-full}

ramp-capacity-0 = Óà∂
ramp-capacity-1 = Óà∑
ramp-capacity-2 = Óà∏
ramp-capacity-foreground = ${colors.foreground}

animation-charging-0 = Óà∂
animation-charging-1 = Óà∑
animation-charging-2 = Óà∏
animation-charging-foreground = ${colors.foreground}
animation-charging-framerate = 750

# Mouse actions
click-right = gnome-power-statistics

;;
; AUDIO AND MUSIC
;;

[module/pulseaudio]
type = internal/pulseaudio

; Get pulseaudio sinks using 'pacmd list-sinks'
sink = alsa_output.pci-0000_00_1f.3.analog-stereo

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
use-ui-max = false

; Interval for volume changes, in %
interval = 5

; Formats and labels
label-volume = %percentage%%
format-volume = <ramp-volume> <label-volume>
format-foreground = ${colors.foreground}

label-muted = "ÓàÇ "
format-muted = <label-muted>--%
format-muted-foreground = ${colors.foreground-alt}

ramp-volume-0 = "ÓÅé"
ramp-volume-1 = "ÓÅì"
ramp-volume-2 = "ÓÅê"
ramp-volume-3 = "ÓÅù "

# Mouse actions
click-right = pavucontrol

[module/mpd]
type = internal/mpd

host = localhost
port = 6600
password = ${env:MPD_PASSWORD}

; Seconds to wait sleep between sync
interval = 1

; Display format
format-online = <bar-progress> <label-time> ÓÅú <label-song>
format-playing = ${self.format-online}
format-paused = <bar-progress> <label-time> ÓÅô <label-song>
;;
; AUDIO AND MUSIC
;;
format-stopped = " "

label-song = %artist:0:8:...% - %title:0:16:...%
label-time = %elapsed% / %total%

format-offline = <label-offline>
format-offline-foreground = ${colors.alert}
label-offline = "ÓÅú mpd is offline"

; Only applies if <bar-progress> is used
bar-progress-width = 10
bar-progress-indicator = |
bar-progress-fill = ‚îÄ
bar-progress-empty = ‚îÄ

;;
; NETWORK
;;

[module/ethernet]
type = internal/network
