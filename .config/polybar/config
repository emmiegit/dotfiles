[colors]
; TODO
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

background-datetime = #222
foreground-datetime = #dfdfdf

;;
; STYLING
;;

[style]
line-size = 3
line-color = #f00

border-size = 4
border-color = #000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

;;
; BAR CONFIGURATIONS
;;

[bar/laptop]
monitor = ${env:MONITOR:eDP1}
enable-ipc = true

; Modules
modules-left = i3
modules-center = window
modules-right = datetime

; Styling
line-size = ${style.line-size}
line-color = ${style.line-color}
border-size = ${style.border-size}
border-color = ${style.border-color}
padding-left = ${style.padding-left}
padding-right = ${style.padding-right}
module-margin-left = ${style.module-margin-left}
module-margin-right = ${style.module-margin-right}

; Fonts
; font-N = "<fontconfig pattenr>;<vertical offset>"
font-0 = "Source Code Pro:size=11;0"
font-1 = "Droid Sans:size=11;1"
font-2 = "Noto Sans Symbols2:size=10;2"

;;
; MODULES
;;

[module/i3]
type = internal/i3

; Only show workspaces on the same display as this bar
pin-workspaces = true

; Whether to sort by display (false) or by workspace index (true)
index-sort = false

; Allow clicking on workspaces
enable-click = true

; Allow scrolling on workspaces
enable-scroll = false

[module/window]
type = internal/xwindow
label = %title:0:40:...%
label-font = 1

[module/datetime]
type = internal/date

; Seconds to sleep between updates
interval = 1.0

; See "https://en.cppreference.com/w/cpp/io/manip/put_time" for options in formatting dates
; A time format is optional
date = %Y/%m/%d
time = %I:%M:%S %p

; Clicking on the module toggles to an alternate date/time format
date-alt = %A %B %d, %Y
time-alt = %I:%M:%S %p

; Other formatting options
format = ðŸ•“ <label>
format-background = ${colors.background-datetime}
format-foreground = ${colors.foreground-datetime}

label = %date% %time%
label-font = 0

