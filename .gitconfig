[user]
    email = emmie.maeda@gmail.com
    name = Emmie Maeda
    signingkey = "2C3CF0C7"
[init]
    defaultBranch = main
[core]
    editor = vim
    precomposeunicode = true
    pager = diff-so-fancy | less --tabs=4 -RFX
    autocrlf = input
[color]
    branch = auto
    diff = auto
    status = auto
    showbranch = auto
    ui = true
[credential]
    helper = cache --timeout 1800
[push]
    default = simple
[alias]
    ; commit staging
    edit = !vim -p $(git ls-files -m | uniq)
    unstage = restore --staged --
    untrack = rm -r --cached
    discard = checkout --
    cached = diff --cached
    amend = commit --amend

    ; branches
    master = checkout master
    main = checkout main
    develop = checkout develop

    ; new commands
    last = log -1 HEAD
    pushfl = push --force-with-lease
    graph = log --graph --branches --remotes --tags --format=format:'%Cgreen%h %Cresetâ€¢ %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order
    wdiff = diff --word-diff=color --word-diff-regex=.
    branches = branch -a
    remotes = remote -a
    stashes = stash list
    tags = tag

    ; shortcuts
    c = commit
    ca = commit -a  ; *not* used for "commit --amend", use "amend" for that
    cb = checkout -b  ; 'create branch'
    rb = rebase
    rbi = rebase -i
    rba = rebase --abort
    rbc = rebase --continue
[commit]
    gpgsign = false
[push]
    default = current
[pull]
    rebase = true

[interactive]
    diffFilter = diff-so-fancy --patch
[diff-so-fancy]
    markEmptyLines = false
    stripLeadingSymbols = false

[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f

[url "https://github.com/"]
    insteadOf = gh://
[url "git@github.com:"]
    pushInsteadOf = gh://
    insteadOf = gh2://

[url "https://gitlab.com/"]
    insteadOf = gl://
[url "git@gitlab.com:"]
    pushInsteadOf = gl://
    insteadOf = gl2://

[url "https://aur.archlinux.org/"]
    insteadOf = aur://
[url "https://ssh+git://aur4.archlinux.org/"]
    pushInsteadOf = aur://

[url "https://git.emmie.tech/"]
